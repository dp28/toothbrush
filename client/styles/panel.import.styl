.panel
  border-radius: 7px
  border:        solid 1px colours.primary.dark
  box-shadow:    2px 2px 2px #888888
  margin:        5px
  padding:       10px
  background:    colours.primary.light

  label
    display: block

    .label-text
      margin-top:    15px
      margin-bottom: 5px

  textarea
    width:  calc(100% - 10px)
    margin: auto

  button[type='submit']
    background:    colours.primary.base
    border-radius: 7px
    font-size:     1.1em
    margin-top:    10px
    height:        35px
    border:        0px
    color:         white

    &:hover
      background: colours.primary.dark

  input
    width: 200px